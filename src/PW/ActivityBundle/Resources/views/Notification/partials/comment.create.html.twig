{% extends 'PWActivityBundle:Notification:partials/base.html.twig' %}

{% block icon %}
    <a href="{{ path('pw_post_default_view', {id: notification.target.post.id}) }}" class="notificationLink"></a>
    <a class="notificationPicture" href="{{ path('pw_post_default_view', {id: notification.target.post.id}) }}">
        <img src="{{ notification.createdBy | user_icon('thumb') }}" alt="{{ notification.createdBy.name }}" width="50" height="50">
    </a>
{% endblock %}

{% block message %}
   commented on
   <a href="{{ path('pw_post_default_view', {id: notification.target.post.id}) }}#notificationList">
   {% if notification.category == "friend" %}
       a spark</a>.
   {% else %}
       your spark</a>.
   {% endif %}
{% endblock %}